# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Connect-later mode
# Set to true to force connect-later (useful for local preview without backend)
# When not set, the app will auto-detect based on missing Supabase envs
NEXT_PUBLIC_CONNECT_LATER=false

# OpenAI / LLM Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_ENDPOINT=https://api.openai.com/v1

# Anthropic (Claude) Configuration
# If set, the app will use Anthropic Claude 3.5 for LLM features
ANTHROPIC_API_KEY=your-anthropic-api-key

# LLM Rate Limiting
LLM_MAX_REQUESTS_PER_MINUTE=60
LLM_MAX_CONCURRENT_REQUESTS=5

# LLM Token Budgeting
LLM_MAX_TOKENS_PER_REQUEST=4000
LLM_MAX_PROMPT_TOKENS=12000

# LLM Timeout and Retries
LLM_REQUEST_TIMEOUT=60000
LLM_RETRY_ATTEMPTS=3
LLM_RETRY_DELAY=1000

# LLM Development Options
LLM_USE_MOCKS=false
LLM_LOG_USAGE=true

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Storage
NEXT_PUBLIC_STORAGE_BUCKET=pdf-uploads

# Stripe (Billing - optional)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
